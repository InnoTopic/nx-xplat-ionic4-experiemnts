{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@my-npm-scope/*": [
        "libs/*"
      ],
      "@my-npm-scope/ionic": [
        "xplat/ionic/index.ts"
      ],
      "@my-npm-scope/ionic/*": [
        "xplat/ionic/*"
      ],
      "@my-npm-scope/web": [
        "xplat/web/index.ts"
      ],
      "@my-npm-scope/web/*": [
        "xplat/web/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}